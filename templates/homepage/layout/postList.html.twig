{# {{dump()}} #}

{% for post in posts %}
<div class="border-bottom mb-5">

    {# ARTICLE TITLE #}
    <div class="row justify-content-center">  
        <a class=" no-underline" href="{{ path('article.view', {slug: post.slug}) }}#article-title">
            <p class="article-title">
                {{ post.title }}
            </p>
        </a>
    </div>

    {# AUTHOR #}
    <div class="row border-top border-bottom pt-2 pb-2 mb-4 mr-3 ml-3">    
        <div class="container">         
            <p class="mb-0 mt-0 font-italic text-center">
                author: {{ post.author.name }}

                {# EDIT OPRION FOR AUTHORS #}
                {% if app.user and app.user.id == post.author.id %}
                    <br>
                    You are an author of this post, 
                    <a class="font-weight-bold no-underline" href="{{ path('article.edit', {slug: post.slug}) }}">   
                        click here                     
                    </a> 
                    to edit it.
                {% endif %}
            </p>      
        </div>          
    </div>
    <div class=" container">

    {# ARTICLE PHOTO #}
        <a class="font-weight-bold no-underline" href="{{ path('article.view', {slug: post.slug}) }}#article-title">
            <img src="{{ asset('uploads/posts/' ~ post.picture ) }}" class="article-picture" alt="">
        </a>

    {# ARTICLE PRELUDE #}
        <p class="mt-3">
            {{ post.prelude }}
        </p>

    </div>

    {# ARTICLE LINK #}
    <div class="row justify-content-center">
        <a class="row font-weight-bold no-underline" href="{{ path('article.view', {slug: post.slug}) }}#article-title">   

            | READ MORE |   
                           
        </a>
    </div>
    
    {# COMMENTS LINK #}

    <div class="row justify-content-center">                  
        <a class="font-italic no-underline mb-5" href="{{ path('article.view', {slug: post.slug}) }}#comment-section">
            {{ post.comments|length }} comments
        </a>
    </div>

</div>
{% endfor %}

    {{ knp_pagination_render(posts) }}


